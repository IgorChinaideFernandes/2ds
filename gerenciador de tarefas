prioridade = (input("esta tarefa é uma prioridade ?\n "))

if prioridade == "sim":
  (input("digite o nivel da sua prioridade "))

elif prioridade == "não":
  print("essa tarefa não é classficada como uma prioridade")

if prioridade == "alta":
  print("esta tarefa foi adicionada como prioridade alta ")

elif prioridade == "media":
  print("sua tarefa foi adicionada como prioridadse media ")

elif prioridade == "baixa":
  print("sua tarefa foi adicionada como prioridade baixa ")
  
